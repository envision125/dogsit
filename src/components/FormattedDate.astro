---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time class="formatted-date" datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

<style>
	time.formatted-date {
		font-size: 1.2em;
		color: #e9ddd4;
		margin-left: 0.5rem;
	}
</style>
