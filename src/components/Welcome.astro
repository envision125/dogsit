<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  .banner-image {
    position: relative;
  }

  .banner-image img {
    vertical-align: middle;
    width: 100%;
    height: 100;
    box-shadow: rgba(255, 0, 0, 0.35) 0px 5px 15px;
    background-repeat: no-repeat;
    object-fit: cover;
    border-top: #000000 4px solid;
    border-bottom: #000000 4px solid;
  }
  .section-title {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    margin: 20px 0;
    color: #e60606;
    /* width: 100%;
      max-width: 1000px; */
  }

  .banner-image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .banner-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 2;
    text-transform: uppercase;
  }

  .banner-text h1 {
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    color: #fff;
    margin: 0;
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.75);

    -webkit-text-stroke: 2px rgb(117, 0, 0);
  }
  .banner-text p {
    font-size: clamp(1rem, 3vw, 2rem);
    color: #ffffff;
    margin-bottom: 0.5rem;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-shadow: 2px 2px 12px rgba(84, 83, 83, 0.694);
    background: linear-gradient(14deg, #000000 0%, #ff0000 100%);

    /* -webkit-text-stroke: 0.5px rgb(255, 255, 255); */
  }
 

  .box {
    padding: 16px;
    background: rgb(201, 12, 12);
    border-radius: 16px;
    border: 1px solid white;
  }

  .card-container {
      display: flex;
      gap: 24px;
      max-width: 1000px;
      width: 100%;
      justify-content: center;
      align-items: flex-start;
      margin: 0 auto;
    }
     .card-container h2{
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 30px;
      color: #222;
      text-align: center;
      width: 100%;
      max-width: 1000px;
    }
    .card {
      margin-top: 16px;;
      flex: 1 1 300px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      cursor: pointer;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
      display: flex;
      flex-direction: column;
    }
    .card:hover,
    .card:focus-within {
      transform: translateY(-6px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      outline: none;
    }
    .card img {
      width: 100%;
      height: auto;
      aspect-ratio: 4 / 3;
      object-fit: cover;
      display: block;
    }
    .card-caption {
      padding: 14px 16px;
      font-size: 1.1rem;
      font-weight: 600;
      color: #222;
    }


 .view-more-btn {
      display: block;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20px;
      padding: 12px 24px;
      font-size: 1.2rem;
      font-weight: 600;
      color: #fff;
      background-color: #4a90e2;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
    }    
    .view-more-btn:hover,
    .view-more-btn:focus {
      background-color: #3a78c2;
      outline: none;
      box-shadow: 0 6px 16px rgba(58, 120, 194, 0.7);
    }



    /* Responsive layout */
    @media (max-width: 850px) {
      .card-container {
        flex-direction: column;
        align-items: center;
      }
      .card {
        width: 90vw;
        max-width: 400px;
      }
    }
</style>


