<!-- Animated Services Section -->
<section id="features" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2
      class="text-3xl font-bold text-center text-sky-800 mb-4 animate-fade-in"
    >
      Our Doggy Services<span class="text-sky-300"></span>
    </h2>
    <p
      class="text-lg text-center text-gray-800 mb-16 max-w-2xl mx-auto animate-fade-in animate-delay-100"
