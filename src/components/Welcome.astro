---

import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import Slider from "../components/Slider.astro";
import ImageSlideSection from "./ImageSlideSection.astro";
import banneIMG from "../assets/bg-nak.jpg";
// import "../styles/fuego.css";

import torta from '../assets/torta.jpg';
import slideDos from "../assets/trestacos.jpeg";
import slideTres from "../assets/huevos.jpg";
import cuatro from "../assets/tostada.jpeg";
import Review from '../components/ReviewSection.astro';


const resturantName = "Tortas Ahogadas Mi Barrio";
const subName = "Estilo Jalisco";
---

<div class="banner-image">
  <img src={banneIMG.src} alt="Background Image" />
  <div class="banner-text">
    <h1>{resturantName}</h1>
    <p>
      {subName}
    </p>
  </div>
</div>
<main>
    <ImageSlideSection
  title="Delicious Mexican Food!"
  description="Explore our amazing dishes with fresh ingredients and authenticate flavors. Satisfy your cravings with some traditional mexican food."
/>
<Review/>
  <section class="">
    <h2 class="section-title">Popular Plates</h2>
    <div class="title-underline"></div>
    <div class="card-container" role="list" aria-label="Image cards">
      <article
        class="card"
        role="listitem"
        tabindex="0"
        aria-label="Mountain landscape image"
      >
        <img src={torta.src} />
        <!-- <div class="card-caption">Mountain Landscape</div> -->
      </article>
      <article
        class="card"
        role="listitem"
        tabindex="0"
        aria-label="Forest pathway image"
      >
        <img src={slideDos.src} />
        <!-- <div class="card-caption">Forest Pathway</div> -->
      </article>
      <article
        class="card"
        role="listitem"
        tabindex="0"
        aria-label="City skyline at dusk image"
      >
        <img src={slideTres.src} />

        <!-- <div class="card-caption">City Skyline</div> -->
      </article>
    </div>
    <button
      class="view-more-btn"
      type="button"
      aria-label="View more destinations"
      onclick="location.href='about'"
    >
      VIEW MORE
    </button>
  </section>

</main>

