---
import Slider from './Slider.astro';

const { title, description } = Astro.props;
---

<style>
  .image-slide-section {
    display: flex;
    gap: 2rem;
    align-items: center;
    max-width: 1200px;
    margin: 2rem auto;
    padding: 1rem;
  }

  .left-column {
    flex: 1 1 50%;
  }

  .right-column {
    flex: 1 1 50%;
    color: #e9ddd4;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .right-column h2 {
    font-size: 2.5rem;
    margin-bottom: 0rem;
    color:#900020;
    /* text-shadow: #ffffff 1px 1px 4px; */
    
  }

  .right-column p {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #e9ddd4
  }

  @media (max-width: 768px) {
    .image-slide-section {
      flex-direction: column;
      padding: 0.5rem;
    }
    .left-column,
    .right-column {
      flex: 1 1 100%;
    }
    .right-column h2 {
      font-size: 2rem;
      margin-top: 1rem;
    }
  }
</style>

<section class="image-slide-section" role="region" aria-label="Image slide with description">
  <div class="left-column">
    <Slider />
  </div>
  <div class="right-column">
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
</section>
