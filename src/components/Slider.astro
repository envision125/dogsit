  .carousel-container {
    position: relative;
/* width: 90vw; */
      max-width: 700px;
 

    /* max-width: 90vw;
    width: 600px;   */
    /* width set for larger screens max-w : 90vw, wL 600px */
    /* height set via aspect ratio trick for responsiveness */
    aspect-ratio: 3 / 2;
    border-radius: 6px;
    overflow: hidden;
    box-shadow: 0 16px 40px rgba(168, 19, 19, 0.3);
    background: #fff;

  }

  .carousel-slide {
    width: 100;
    height: 100%;
    position: relative;
  }
  .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: fill;
    
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 1s ease-in-out;
  }
  .carousel-slide img.active {
    opacity: 1;
    position: relative;
  }
  /* Navigation buttons */
  .carousel-nav {
    position: absolute;
    top: 50%;
    width: 100%;
    pointer-events: none;
  }
  .carousel-nav button {
    pointer-events: all;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.4);
    border: none;
    border-radius: 50%;
    color: white;
    width: 40px;
    height: 40px;
    font-size: 24px;
    cursor: pointer;
    user-select: none;
    transform: translateY(-50%);
    transition: background-color 0.3s ease;
  }
  .carousel-nav button:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }
  .prev-btn {
    left: 15px;
  }
  .next-btn {
    right: 15px;
  }
  /* Dots navigation */
  .dots {
    position: absolute;
    bottom: 15px;
    width: 100%;
    text-align: center;
  }
  .dots span {
    display: inline-block;
    width: 12px;
    height: 12px;
    margin: 0 6px;
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .dots span.active {
    background-color: rgba(0, 137, 30, 0.8);
  }
  /* Responsive adjustments */
  @media (max-width: 700px) {
    .carousel-container {
      width: 90vw;
      aspect-ratio: 4 / 3;
      border-radius: 12px;
    }
    .carousel-nav button {
      width: 35px;
      height: 35px;
      font-size: 20px;
    }
    .dots span {
      width: 10px;
      height: 10px;
      margin: 0 4px;
    }
  }
  
    
</style>

<body>
 
 
   
      <div class="carousel-container" aria-label="Image Carousel">
        <div class="carousel-slide">
          <img src={slideUno.src} alt="Nature Image 1" class="active" />
          <img src={slideDos.src} alt="Nature Image 2" />
          <img src={slideTres.src} alt="Nature Image 3" />
          <img src={slideTres.src} alt="Nature Image 4" />
        </div>
        <div class="carousel-nav">
          <button class="prev-btn" aria-label="Previous Image">&#10094;</button>
          <button class="next-btn" aria-label="Next Image">&#10095;</button>
        </div>
        <div class="dots" role="tablist" aria-label="Select Image Slide">
          <span
            role="tab"
            tabindex="0"
            aria-selected="true"
            aria-controls="slide1"
            class="active"></span>
          <span
            role="tab"
            tabindex="-1"
            aria-selected="false"
            aria-controls="slide2"></span>
          <span
            role="tab"
            tabindex="-1"
            aria-selected="false"
            aria-controls="slide3"></span>
          <span
            role="tab"
            tabindex="-1"
            aria-selected="false"
            aria-controls="slide4"></span>
        </div>
      </div>
