  .carousel-container {
    position: relative;
    max-width: 90vw;
    width: 600px;
    /* height set via aspect ratio trick for responsiveness */
    aspect-ratio: 3 / 2;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.3);
    background: #fff;
  }
  .carousel-slide {
    width: 100%;
    height: 100%;
    position: relative;
  }
  .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 1s ease-in-out;
  }
  .carousel-slide img.active {
    opacity: 1;
    position: relative;
  }
  /* Navigation buttons */
  .carousel-nav {
    position: absolute;
    top: 50%;
    width: 100%;
    pointer-events: none;
  }
  .carousel-nav button {
    pointer-events: all;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.4);
    border: none;
    border-radius: 50%;
    color: white;
    width: 40px;
    height: 40px;
    font-size: 24px;
    cursor: pointer;
    user-select: none;
    transform: translateY(-50%);
    transition: background-color 0.3s ease;
  }
  .carousel-nav button:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }
  .prev-btn {
    left: 15px;
  }
  .next-btn {
    right: 15px;
  }
  /* Dots navigation */
  .dots {
    position: absolute;
    bottom: 15px;
    width: 100%;
    text-align: center;
  }
  .dots span {
    display: inline-block;
    width: 12px;
    height: 12px;
    margin: 0 6px;
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .dots span.active {
    background-color: rgba(0, 0, 0, 0.8);
  }
  /* Responsive adjustments */
  @media (max-width: 700px) {
    .carousel-container {
      width: 90vw;
      aspect-ratio: 4 / 3;
      border-radius: 12px;
    }
    .carousel-nav button {
      width: 35px;
      height: 35px;
      font-size: 20px;
    }
    .dots span {
      width: 10px;
      height: 10px;
      margin: 0 4px;
    }
  }

  .right {
      flex: 1 1 50%;
      padding: 40px 50px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      z-index: 2;
      position: relative;
    }
    .title {
      font-size: 2.8rem;
      font-weight: 700;
      margin: 0 0 20px;
      color: #007BFF;
    }
    .quote {
      font-size: 1.3rem;
      font-style: italic;
      line-height: 1.5;
      color: #444;
      border-left: 5px solid #007BFF;
      padding-left: 20px;
      margin: 0;
      user-select: none;
    }
</style>

