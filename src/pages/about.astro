---
import Layout from '../layouts/Layout.astro';
import heroImage from '../assets/plaza.jpeg';

const pageTitle = "About Us";
const pageDescription = "Learn more about our story and values.";
---

<Layout title={pageTitle} description={pageDescription}>
  <section style="text-align: center; margin: 2rem 0;">
    <img src={heroImage.src} alt="Hero Image"  />
  </section>
  <article style="max-width: 720px; margin: 0 auto; padding: 1rem; color: #333; font-family: Arial, sans-serif;">
    <h1>{pageTitle}</h1>
    <p>
      Welcome to our restaurant! We are passionate about bringing authentic flavors and a warm atmosphere to our community.
    </p>
    <p>
      Our story began many years ago with a dream to share traditional recipes passed down through generations.
    </p>
    <p>
      We invite you to explore our menu and experience the taste of our heritage.
    </p>
  </article>
</Layout>
