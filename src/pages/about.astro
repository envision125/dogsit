  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap");
  body {
    font-family: "Poppins", sans-serif;
  }
  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    height: auto;

    margin: 2rem;
  }

  .hero img {
    object-fit: contain;
    border-radius: 8px;
    box-shadow: rgb(125, 124, 124) 0px 5px 15px;
  }

  .about-text {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
    font-size: 1.2rem;
    line-height: 1.6;
    color: #333;
  }
</style>

